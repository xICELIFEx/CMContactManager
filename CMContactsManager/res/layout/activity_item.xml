<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/linearLayputWithContactData">"

        <ImageView
            android:id="@+id/imageAvatar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp" >
        </ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/textViewFirstName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </EditText>

            <EditText
                android:id="@+id/textViewLastName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </EditText>

        </LinearLayout>

    </LinearLayout>
    
    <Button
        android:id="@+id/itemSaveButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="itemSaveButtonOnClickAction"
        android:text="@string/save_button_title"
        android:layout_below="@id/linearLayputWithContactData">	
    </Button>

</RelativeLayout>
